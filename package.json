-- FILE: src/pages/Upload.jsx -- import React, {useState} from 'react' import { useNavigate } from 'react-router-dom'

export default function Upload(){ const [file, setFile] = useState(null) const [progress, setProgress] = useState(0) const navigate = useNavigate()

function onSelect(e){ const f = e.target.files[0] if(!f) return if(f.size > 8010241024){ alert('File too large. Keep under 80MB or use YouTube embed.') return } setFile(f) }

async function upload(){ if(!file) return alert('Select a file first') // Temporary local preview approach: we will create object URL and store in localStorage const id = Date.now().toString() const reader = new FileReader() reader.onload = ()=>{ const data = reader.result const meta = { id, name: file.name, date: new Date().toISOString(), data } const arr = JSON.parse(localStorage.getItem('axvora_videos') || '[]') arr.unshift(meta) localStorage.setItem('axvora_videos', JSON.stringify(arr)) setProgress(100) setTimeout(()=> navigate('/library'), 700) } reader.onprogress = (e)=>{ if(e.lengthComputable) setProgress(Math.round((e.loaded/e.total)*100)) } reader.readAsDataURL(file) }

return ( <section className="py-12"> <h2 className="text-2xl font-bold">Upload Demo Video</h2> <p className="text-gray-600 mt-2">Upload a short 2-3 minute MP4 demo (under 80MB). We store locally for prototype use.</p>

<div className="mt-6 card">
    <input type="file" accept="video/mp4" onChange={onSelect} />
    {file && <div className="mt-4">Selected: <strong>{file.name}</strong></div>}
    <div className="mt-4 flex items-center gap-3">
      <button onClick={upload} className="px-4 py-2 bg-accent text-white rounded">Upload</button>
      <div className="w-48 h-3 bg-gray-200 rounded overflow-hidden">
        <div style={{width: progress+'%'}} className="h-full bg-accent"></div>
      </div>
      <div className="text-sm text-gray-500">{progress}%</div>
    </div>
  </div>
</section>

) }

-- FILE: src/pages/Library.jsx -- import React from 'react' import { Link } from 'react-router-dom'

export default function Library(){ const arr = JSON.parse(localStorage.getItem('axvora_videos') || '[]') return ( <section className="py-12"> <h2 className="text-2xl font-bold">Video Library</h2> <p className="text-gray-600 mt-2">Your uploaded demos (local prototype storage)</p>

<div className="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
    {arr.length === 0 && <div className="card">No videos yet. Upload one from the Upload page.</div>}
    {arr.map(v => (
      <div key={v.id} className="card flex gap-4 items-center">
        <div className="w-40 h-24 bg-gray-100 rounded overflow-hidden flex items-center justify-center">
          <video src={v.data} className="w-full h-full object-cover" muted></video>
        </div>
        <div>
          <div className="font-semibold">{v.name}</div>
          <div className="text-sm text-gray-500">{new Date(v.date).toLocaleString()}</div>
          <div className="mt-3"><Link to={`/player/${v.id}`} state={{video: v}} className="text-accent">Open Player</Link></div>
        </div>
      </div>
    ))}
  </div>
</section>

) }

-- FILE: src/pages/Player.jsx -- import React from 'react' import { useLocation, useParams, useNavigate } from 'react-router-dom'

export default function Player(){ const { id } = useParams() const loc = useLocation() const nav = useNavigate() const video = loc.state?.video || JSON.parse(localStorage.getItem('axvora_videos') || '[]').find(v=>v.id===id) if(!video) return ( <section className="py-12"> <div className="card">Video not found. Go back to <a href="/library" className="text-accent">Library</a>.</div> </section> )

return ( <section className="py-12"> <button onClick={()=>nav(-1)} className="text-sm text-gray-600 mb-4">← Back</button> <div className="card"> <h3 className="text-lg font-semibold">{video.name}</h3> <div className="mt-4"> <video controls src={video.data} style={{width:'100%',borderRadius:8}}></video> </div> <p className="text-sm text-gray-500 mt-3">Uploaded: {new Date(video.date).toLocaleString()}</p> </div> </section> ) }

-- FILE: README.md --

Axvora UI (React + Tailwind)

Clean Apple-like UI prototype for Axvora AI. This project is a frontend prototype that stores uploaded videos in localStorage for demo purposes. It's production-ready frontend that you can connect to any backend (S3, Firebase, Supabase, etc.)

Quick start

1. Install Node.js (v18+ recommended)


2. npm install


3. npm run dev (open http://localhost:5173)



Deploy

Build: npm run build

Deploy static files to Netlify / Vercel / GitHub Pages.


Notes

Video upload is stored in browser localStorage for prototype; replace Upload.jsx upload logic with real backend to store files permanently.

Replace contact email and branding in Navbar and Home.


